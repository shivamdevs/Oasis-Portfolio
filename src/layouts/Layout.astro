---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<meta name="theme-color" content="#141e26" />
		<meta name="description" content="Shivam Dewangan | Front-end Developer" />

		<link rel="stylesheet" href="/assets/fonts/fonts.css" />
		<link rel="stylesheet" href="/assets/fonts/fontawesome.min.css" />

		<script
			src="/assets/components/jquery.min.js"
			type="text/javascript"
			client:load
		></script>
		<script client:load>
			const Q = jQuery;
		</script>
		<script
			src="/assets/components/jscript.min.js"
			type="text/javascript"
			client:load
		></script>
		<script
			src="/assets/components/propbar.min.js"
			type="text/javascript"
			client:load
		></script>
		<script
			src="/assets/components/highlight/highlight.min.js"
			type="text/javascript"
			client:load
		></script>
		<script
			src="/assets/components/clipboard.min.js"
			type="text/javascript"
			client:load
		></script>
		<link
			rel="stylesheet"
			href="/assets/components/highlight/atom-one-dark.min.css"
		/>
	</head>
	<body>
		<slot />
		<style>
			:root {
				--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
				--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
				--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

				--color-text: hsl(12, 5%, 4%);
				--color-bg: #fff;
				--color-bg-alter: #eaf1fe;
				--color-border: hsl(17, 24%, 90%);

				--layout-color: #560056;
				--layout-color-white: #fff;
				--layout-semi-white: #56005644;
				--layout-font-size: 16px;
			}

			html {
				font-family: "Rubik", "Poppins", system-ui, sans-serif;
				font-size: var(--font-size-base);
				color: var(--color-text);
				background-color: var(--color-bg);
				scroll-behavior: smooth;
			}

			body {
				margin: 0;
				background-image: url(/assets/images/purple.webp);
				background-position: center top;
				background-repeat: repeat-y;
				background-size: 100vw auto;
			}

			:global(*) {
				box-sizing: border-box;
				word-wrap: break-word;
				-webkit-text-size-adjust: 100%;
				-webkitfontsmoothing: antialiased;
				-webkit-tap-highlight-color: transparent;
			}
			:global(button, input, textarea, select) {
				font-family: inherit;
			}
			:global(h1) {
				font-size: var(--font-size-xl);
			}

			:global(h2) {
				font-size: var(--font-size-lg);
			}
			:global(code) {
				font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
					DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
					monospace;
			}
			:global(.card-of-width) {
				width: 100%;
				margin: auto;
			}
			:global(.card-of-width.width-600) {
				max-width: 600px;
			}
			:global(.card-of-width.width-800) {
				max-width: 800px;
			}
			:global(.card-of-width.width-900) {
				max-width: 900px;
			}
			:global(.card-of-width.width-1000) {
				max-width: 1000px;
			}
			:global(.card-of-width.width-1200) {
				max-width: 1200px;
			}
			:global(.plain-card) {
				margin: 5rem auto;
			}
			:global(.as-h1) {
				font-size: 1.5em;
			}
			:global(.as-h2) {
				font-size: 1.35em;
			}
			:global(.as-h3) {
				font-size: 1.2em;
			}
			:global(.with-margin-1) {
				margin: 1rem auto;
			}
			:global(.with-margin-2) {
				margin: 2rem auto;
			}
			:global(.with-margin-3) {
				margin: 3rem auto;
			}
			:global(.with-margin-4) {
				margin: 4rem auto;
			}
			:global(.center-content) {
				text-align: center;
			}
			:global(.button-classic) {
				display: inline-flex;
				margin: 5px;
				padding: 14px 24px;
				border-radius: 25px;
				text-decoration: none;
				color: var(--color-text);
				transition: 0.1s;
				font-size: var(--layout-font-size);
				border: 1px solid var(--layout-color);
				color: var(--layout-color);
			}
			:global(.button-classic:hover) {
				background: var(--layout-color);
				color: var(--layout-color-white);
			}
			:global(.loader) {
				margin: auto;
				background: rgba(0, 0, 0, 0);
				display: block;
				position: absolute;
				inset: 50% auto auto 50%;
				transform: translate(-50%, -50%);
			}
			:global(.reference) {
				color: dodgerblue;
				text-decoration: none;
				transition: 0.2s;
			}
			:global(.reference:hover) {
				color: #2a52be;
			}

			:global(.activity.fade-in) {
				transition: opacity 1s;
				opacity: 0;
			}
			:global(.activity.fade-in.active) {
				opacity: 1;
			}
			:global(.activity.slide-in) {
				transition: top 1s;
				position: relative;
				top: 50px;
			}
			:global(.activity.slide-in.active) {
				top: 0;
			}
			:global(.activity.fade-slide-in) {
				transition: top 1s, opacity 1s;
				position: relative;
				opacity: 0;
				top: 50px;
			}
			:global(.activity.fade-slide-in.active) {
				opacity: 1;
				top: 0;
			}
		</style>
		<script client:load>
			$(document).scroll(detect_activity);
			function detect_activity() {
				$(".activity").each((act) => {
					if (act[0].getBoundingClientRect().top - window.innerHeight + 20 < 0) {
						act.addClass("active");
					} else {
						act.removeClass("active");
					}
				});
			}
			detect_activity();
		</script>
	</body>
</html>
